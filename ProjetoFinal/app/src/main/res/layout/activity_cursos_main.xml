<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAD8DE"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.CursosMainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Cursos"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Clique no curso pretendido para mais detalhes"
        android:textAlignment="textStart"
        android:textColor="#9E063A"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_ordenar_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E64078"
                android:text="Ordenar Cursos por Nome Crescente" />

            <Button
                android:id="@+id/button_ordenar_nome_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E64078"
                android:text="Ordenar Cursos por Nome Descrescente" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_ordenar_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E64078"
                android:text="Ordenar Cursos por Data Crescente" />

            <Button
                android:id="@+id/button_ordenar_data_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E64078"
                android:text="Ordenar Cursos por Data Decrescente" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_adicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="#E64078"
        android:padding="10dp"
        android:text="Adicionar Curso" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="#E64078"
        android:padding="10dp"
        android:text="Logout" />

</LinearLayout>
